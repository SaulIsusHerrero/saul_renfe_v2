<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite de Pruebas Renfe" parallel="tests" thread-count="3">

    <!-- Default Chrome configuration that will always run -->
    <test name="Default_Chrome_Execution">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.EmptyBuyerDataTest5days"/>
            <class name="tests.InvalidCardPaymentTest"/>
            <class name="tests.InvalidDataTraveler15days"/>
            <class name="tests.SelectTrainMinor50€Evenings"/>
        </classes>
    </test>
    <!-- Alternative configurations for other browsers -->
    <test name="Chrome_Execution" enabled="false">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.EmptyBuyerDataTest5days"/>
            <class name="tests.InvalidCardPaymentTest"/>
            <class name="tests.InvalidDataTraveler15days"/>
            <class name="tests.SelectTrainMinor50€Evenings"/>
        </classes>
    </test>
    <test name="Firefox_Execution" enabled="false">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.EmptyBuyerDataTest5days"/>
            <class name="tests.InvalidCardPaymentTest"/>
            <class name="tests.InvalidDataTraveler15days"/>
            <class name="tests.SelectTrainMinor50€Evenings"/>
        </classes>
    </test>
    <test name="Edge_Execution" enabled="false">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.EmptyBuyerDataTest5days"/>
            <class name="tests.InvalidCardPaymentTest"/>
            <class name="tests.InvalidDataTraveler15days"/>
            <class name="tests.SelectTrainMinor50€Evenings"/>
        </classes>
    </test>
</suite>