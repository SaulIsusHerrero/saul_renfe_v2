<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite de Pruebas Renfe" parallel="tests" thread-count="3">

    <!-- Configuración predeterminada (Chrome) que se ejecutará siempre -->
    <test name="Default_Chrome_Execution">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.InvalidCardPaymentTest"/>
            <class name="tests.InvalidDataTraveler15d"/>
        </classes>
    </test>
    <!-- Configuraciones alternativas para otros navegadores -->
    <test name="Chrome_Execution" enabled="false">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.InvalidCardPaymentTest"/>
            <class name="tests.InvalidDataTraveler15d"/>
        </classes>
    </test>
    <test name="Firefox_Execution" enabled="false">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.InvalidCardPaymentTest"/>
            <class name="tests.InvalidDataTraveler15d"/>
        </classes>
    </test>
    <test name="Edge_Execution" enabled="false">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.InvalidCardPaymentTest"/>
            <class name="tests.InvalidDataTraveler15d"/>
        </classes>
    </test>

</suite>